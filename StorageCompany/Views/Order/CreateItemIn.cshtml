@model ItemIn

@{
    Layout = null;
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <div class="form-group">
                @Html.LabelFor(model => model.productId, "productId", new { @class = "control-label col-md-4" })
                <div class="col-md-/">
                    @Html.DropDownList("productId")
                    @Html.ValidationMessageFor(model => model.productId)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.storageId, "storageId", new { @class = "control-label col-md-4" })
                <div class="col-md-8">
                    @Html.DropDownList("storageId")
                    @Html.ValidationMessageFor(model => model.storageId)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.timeExpire, new { @class = "control-label col-md-4" })
                <div class="col-md-8">
                    @Html.EditorFor(model => model.timeExpire)
                    @Html.ValidationMessageFor(model => model.timeExpire)
                </div>
            </div>
        </div>


        <div class="form-group">
            <span class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-primary" />&nbsp; &nbsp;
                @Html.ActionLink("Cancel", "Step2_MovementIn", "Order", new {@class="btn btn-default"})              
            </span>
        </div>

}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
